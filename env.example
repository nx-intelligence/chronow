# Mode Selection
# Set to 'true' to use MongoDB-only mode (no Redis required)
CHRONOW_MONGO_ONLY=false

# Redis Configuration (optional if CHRONOW_MONGO_ONLY=true)
REDIS_URL=redis://localhost:6379/0
REDIS_TLS=false
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=cw:
REDIS_RETRY_MS=1000

# Redis Cluster (optional, comma-separated)
# REDIS_CLUSTER_NODES=["host1:6379","host2:6379"]

# Redis TLS Certificate (optional)
# REDIS_CA_CERT=/etc/ssl/certs/my-redis-ca.pem

# MongoDB Configuration (required)
MONGO_URI=mongodb://localhost:27017

# Spaces/S3 Configuration (optional, for future large payload offload)
SPACE_ACCESS_KEY=
SPACE_SECRET_KEY=
SPACE_ENDPOINT=

# Operational Tuning (optional)
REDIS_VISIBILITY_TIMEOUT_MS=30000
REDIS_MAX_STREAM_LEN=100000
REDIS_MAX_PAYLOAD_BYTES=262144

